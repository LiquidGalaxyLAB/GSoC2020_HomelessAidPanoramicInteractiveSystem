<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/user_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cv_margins"
        app:cardElevation="@dimen/elevation"
        android:elevation="@dimen/elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margins">

            <TextView
                android:id="@+id/lg_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text"
                android:textSize="@dimen/body"
                android:layout_marginEnd="@dimen/cv_margins"
                android:textColor="@color/black"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_weight="1"
            android:layout_margin="@dimen/margins">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/show_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:icon="@drawable/show_bio_icon"
                app:iconTint="@color/colorPrimaryDark"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/show_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:icon="@drawable/show_transactions_icon"
                app:iconTint="@color/colorPrimaryDark"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/orbit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:icon="@drawable/orbit_icon"
                app:iconTint="@color/colorPrimaryDark"/>

        </LinearLayout>




        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>